{
  "name": "playwright-screenshot-flow-example",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register index.ts",
    "start": "node dist/index.js",
    "package": "pkg dist/index.js --targets node18-win-x64 --output screenshot.exe",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "automation",
    "evidence",
    "screenshot",
    "playwright",
    "nodejs"
  ],
  "author": "Mohammad Alsmadi <alsmadi.work@gmail.com>",
  "license": "ISC",
  "description": "A Node.js tool for automated evidence collection using screenshots and Playwright.",
  "homepage": "https://github.com/alsmadi99/playwright-screenshot-flow-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/alsmadi99/playwright-screenshot-flow-example.git"
  },
  "bugs": {
    "url": "https://github.com/alsmadi99/playwright-screenshot-flow-example/issues"
  },
  "pkg": {
    "assets": [
      "ms-playwright/**/*"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,js,json,md}": "eslint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/screenshot-desktop": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.11",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "fs-extra": "^11.3.2",
    "image-size": "^2.0.2",
    "playwright": "^1.56.1",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.3"
  }
}
